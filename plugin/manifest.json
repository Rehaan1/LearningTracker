{
    "manifest_version": 2,
    "name": "Learning Tracker",
    "version": "1.0",
    "description": "This extension tracks your learning websites visits providing you a detail analysis",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions" : [
        "tabs",
        "*://*/"
    ]

}